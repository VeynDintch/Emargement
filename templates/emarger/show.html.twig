{% extends 'base.html.twig' %}

{% block title %}Emarger{% endblock %}

{% block body %}
    <h1>Emarger</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emarger.id }}</td>
            </tr>
            <tr>
                <th>Presence</th>
                <td>{{ emarger.presence ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Alternative</th>
                <td>{{ emarger.alternative }}</td>
            </tr>
            <tr>
                <th>HeureArrivee</th>
                <td>{{ emarger.heureArrivee ? emarger.heureArrivee|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureDepart</th>
                <td>{{ emarger.heureDepart ? emarger.heureDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_emarger_index') }}">back to list</a>

    <a href="{{ path('app_emarger_edit', {'id': emarger.id}) }}">edit</a>

    {{ include('emarger/_delete_form.html.twig') }}
{% endblock %}
