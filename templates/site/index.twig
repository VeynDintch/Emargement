    <title>Système d'Émargement</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('login') }}">Login</a></li>
                <li><a href="{{ path('professor') }}">Professeur</a></li>
                <li><a href="{{ path('trainee') }}">Stagiaire</a></li>
            </ul>
        </nav>
        <h1>Système d'Émargement</h1> 
    </header>

    <main>
        <form> 
            <label for="cours">Cours :</label>
            <select id="cours" name="cours">
                <option value="cours1">Cours 1</option>
                <option value="cours2">Cours 2</option>
            </select>

            <label for="enseignant">Enseignant :</label>
            <input type="text" id="enseignant" name="enseignant" required>

            <label for="date">Date :</label>
            <input type="date" id="date" name="date" required>

            <label for="heure">Heure :</label>
            <input type="time" id="heure" name="heure" required>

            <button type="submit">Enregistrer</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Cours</th>
                    <th>Enseignant</th>
                    <th>Date</th>
                    <th>Heure</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </main>
</body>
</html>
