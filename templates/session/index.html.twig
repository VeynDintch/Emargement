{% extends 'base.html.twig' %}

{% block title %}Session index{% endblock %}

{% block body %}
    <h1>Session index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>DateSession</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.id }}</td>
                <td>{{ session.intitule }}</td>
                <td>{{ session.dateSession ? session.dateSession|date('Y-m-d') : '' }}</td>
                <td>{{ session.heureDebut ? session.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ session.heureFin ? session.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ session.commentaire }}</td>
                <td>
                    <a href="{{ path('app_session_show', {'id': session.id}) }}">show</a>
                    <a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_session_new') }}">Create new</a>
{% endblock %}
